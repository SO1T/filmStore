{
  "name": "filmstore",
  "version": "1.0.0",
  "description": "Web app to store films description",
  "main": "server.js",
  "scripts": {
    "client-install": "npm instal --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "mocha --timeout 50000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SO1T/filmStore.git"
  },
  "author": "Denys Pravdyvyj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SO1T/filmStore/issues"
  },
  "homepage": "https://github.com/SO1T/filmStore#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "config": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.3-alpha.1",
    "jsonwebtoken": "^8.5.1",
    "liqpay": "0.0.1",
    "liqpay-sdk": "^3.2.0",
    "mongoose": "^5.4.19",
    "nodemailer": "^6.4.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^7.0.0",
    "nodemon": "^1.18.10"
  }
